set $mod Mod4

mode "resize" {
  bindsym $left       resize shrink width 10 px or 10 ppt
  bindsym $down       resize grow height 10 px or 10 ppt
  bindsym $up         resize shrink height 10 px or 10 ppt
  bindsym $right      resize grow width 10 px or 10 ppt

  bindsym Left        resize shrink width 10 px or 10 ppt
  bindsym Down        resize grow height 10 px or 10 ppt
  bindsym Up          resize shrink height 10 px or 10 ppt
  bindsym Right       resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

font pango:Jetbrains Mono
new_window none
gaps inner 8
floating_modifier $mod
floating_minimum_size 700x400
# floating_maximum_size 700x400
# for_window [instance=kitty]sticky enable

exec --no-startup-id dex --autostart --environment i3
exec_always variety
exec_always --no-startup-id nm-applet
exec_always sleep 0.5; xmodmap ~/.xmodmap
exec_always sleep 0.5; flameshot
exec_always sleep 0.5; compton --backend xrender
exec_always killall clipit; sleep 0.5; clipit
exec_always --no-startup-id fcitx5 -d
exec_always xrandr --output HDMI-1-0 --same-as DP-1 --auto
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

set $refresh_i3status killall -SIGUSR1 i3status
set $up l
set $down k
set $left j
set $right semicolon

bindsym $mod+$down focus down
bindsym $mod+$left focus left
bindsym $mod+$right focus right
bindsym $mod+$up focus up
bindsym $mod+0 workspace number $ws10
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+Ctrl+Left  workspace prev
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Return exec kitty
bindsym $mod+Right focus right
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+1 move container to workspace $ws1, workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2, workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3, workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4, workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5, workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6, workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7, workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8, workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9, workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10, workspace $ws10
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Shift+n exec killall screenkey
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+s exec --no-startup-id flameshot screen -c
bindsym $mod+space floating toggle
bindsym $mod+Up focus up
bindsym $mod+a focus parent
bindsym $mod+c exec --no-startup-id google-chrome-stable
bindsym $mod+d exec --no-startup-id rofi -show combi
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen toggle
bindsym $mod+h split h
bindsym $mod+m exec --no-startup-id pcmanfm
bindsym $mod+minus scratchpad show
bindsym $mod+n killall screenkey; exec --no-startup-id screenkey
bindsym $mod+q exec xflock4
bindsym $mod+r mode "resize"
bindsym $mod+s exec --no-startup-id flameshot gui    -c
bindsym $mod+Shift+space focus mode_toggle
bindsym $mod+v split v
bindsym $mod+w layout tabbed
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status

bar {
  position top
  # i3bar_command i3bar --transparency #000000FF
